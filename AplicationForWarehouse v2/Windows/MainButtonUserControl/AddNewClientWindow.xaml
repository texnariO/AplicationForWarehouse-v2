        <TextBlock HorizontalAlignment="Left" Margin="183,259,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="Password"/><Run Language="pl-pl" Text=":"/></TextBlock>
        <TextBox x:Name="UserPassword" AcceptsReturn="False"  HorizontalAlignment="Left" Margin="183,280,0,0" TextWrapping="Wrap" Text="&#xA;" VerticalAlignment="Top" Width="95" Height="22"/>
        <Button Click ="ButtonAddClient_Click" Name="ButtonStartWork" Content="Dodaj" HorizontalAlignment="Left" Margin="116,342,0,0" VerticalAlignment="Top" Width="148"/>
        <TextBlock Name="ErrorMessage" HorizontalAlignment="Center" Margin="0,383,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="366" Height="41"/>
    </Grid>
</Window>
