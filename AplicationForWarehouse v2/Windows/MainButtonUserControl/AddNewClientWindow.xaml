        <TextBox Name="AddNewClientName" AcceptsReturn="False"  HorizontalAlignment="Left" Margin="129,129,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="156"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,129,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="85" Height="22"><Run Text="Nazwa klienta"/><Run Language="pl-pl" Text=":"/></TextBlock>
        <TextBox x:Name="AddNewClientGroup" AcceptsReturn="False"  HorizontalAlignment="Left" Margin="129,167,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="156"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,167,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="85" Height="22"><Run Language="pl-pl" Text="Grupa klienta:"/></TextBlock>
        <TextBox x:Name="AddNewClientCommnet" AcceptsReturn="False"  HorizontalAlignment="Left" Margin="111,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="254"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="86" Height="22"><Run Language="pl-pl" Text="Komentarz:"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="20,259,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="ru-ru" Text="Login:"/></TextBlock>
